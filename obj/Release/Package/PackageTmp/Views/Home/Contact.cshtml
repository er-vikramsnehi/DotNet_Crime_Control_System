@model cmspro.Models.contact

@{
    ViewBag.Title = "Contact";
}
 
 
<div class="row">

    <div class="col-md-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3425.0298143374994!2d75.85752931513449!3d30.857840281593766!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391a828f09011b15%3A0xbf3f5b51dcc81b12!2sGuru+Nanak+Dev+Engineering+College!5e0!3m2!1sen!2sin!4v1528427174729" width="600" height="450" frameborder="0" style="border:5px solid black;" class="w3-card-2" allowfullscreen></iframe>
    </div>
    <div class="col-md-6" style="float:right;">
        @using (Html.BeginForm("CreateContact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
        
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="">
                        @Html.EditorFor(model => model.contact_name, new { htmlAttributes = new { @class = "form-control w3-padding", placeholder = "Your Name" } })
                        @Html.ValidationMessageFor(model => model.contact_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="">
                        @Html.EditorFor(model => model.contact_mail, new { htmlAttributes = new { @class = "form-control w3-padding", placeholder = "Your Mail ID" } })
                        @Html.ValidationMessageFor(model => model.contact_mail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.EditorFor(model => model.contact_mobile, new { htmlAttributes = new { @class = "form-control w3-padding", placeholder = "Mobile number" } })
                        @Html.ValidationMessageFor(model => model.contact_mobile, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        <textarea rows="4" name="contact_why" class="form-control w3-padding" placeholder="why you connect us"></textarea>
                        @Html.ValidationMessageFor(model => model.contact_why, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Submit your form" class="btn btn-success w3-input" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

