@model cmspro.Models.ViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @using (Html.BeginForm("CreatePolice", "Default", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-2">Police Name: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_name, new { htmlAttributes = new { @class = "form-control w3-padding", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Email: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_email, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Number: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_mobile, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_mobile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Posting: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_posting, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_posting, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Army Account Number: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_account_number, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_account_number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police BANK IFSC: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_ifsc_code, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_ifsc_code, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Image: </div>
                <div class="col-md-10">
                    <input type="file" name="army_image" style="border:2px solid black;" value="Upload Image" />
                    @Html.ValidationMessageFor(model => model.army_image, "", new { @class = "text-danger", style = "border:2px solid black;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police's Wife: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_wife, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_wife, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Fathers: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_father, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_father, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Name: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_address, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Ploice Medels: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_medal, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_medal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Strike Count: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_counter_strike, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_counter_strike, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Ploice Hurt Count: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_hurt_count, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_hurt_count, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Police Summary: </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.army_summary, new { htmlAttributes = new { @class = "form-control", style = "border:1px solid black;" } })
                    @Html.ValidationMessageFor(model => model.army_summary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success w3-input" style="color:white;font-weight:bold;font-family:cursive;" />
                </div>
            </div>
        </div>
    }

</body>
</html>

