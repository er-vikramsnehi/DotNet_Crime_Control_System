@model cmspro.Models.report


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Provide  Police </title>

    <link href="~/meterialicon/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/Content/w3.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        /* Note: Try to remove the following lines to see the effect of CSS positioning */
        .affix {
            top: 0;
            width: 100%;
            z-index: 9999 !important;
        }
    </style>




</head>
<body>

    <div class="container-fluid">

        <center><h1 style="color:black;"><b><i class="zmdi zmdi-shield-security" style="font-size:200%;color:midnightblue;"></i> Police Providing </b></h1></center>
    </div>
    <div class="navbar w3-orange navbar-top w3-card-4" data-spy="affix" data-offset-top="197">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="color:deeppink;">+</button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav navbar-right" style="right:10px;">
                    @if (Session["name"] != null)
                    {
                        <li class="w3-dropdown-hover w3-hover-red">
                            <a> <img src="~/uploads/@Session["image"]" style="width:25px;height:25px;" class="w3-card-2 w3-border w3-circle"> Welcome:  @Session["name"]</a>

                            <div class="w3-dropdown-content w3-card-4" style="width:200px;border:2px solid black;">
                                <ul class="list-group">
                                    <li class="list-group-item"><img src="~/uploads/@Session["image"]" style="width:100%;height:150px;" class="w3-card-2 w3-border"></li>
                                    <li class="list-group-item"><a href="mailto:@Session["email"]">Email: @Session["email"]</a></li>
                                    <li class="list-group-item"><a href="callto:@Session["mobile"]">Mobile: @Session["mobile"]</a></li>
                                    <li class="list-group-item"><a href="@Session["accounttype"]">Type: @Session["accounttype"]</a></li>
                                    <li class="list-group-item"><a href="http://@Session["site"]">Site: @Session["site"]</a></li>
                                    <li class="list-group-item w3-red"><a href="/Home/Logout">Logout</a></li>
                                </ul>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li><a data-toggle="modal" data-target="#exampleModalCenter" style="color:deeppink;cursor:pointer;"><i class="glyphicon glyphicon-user"> Login</i></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>











    <div class="container-fluid">
        <div class="col-lg-12">


            <div class="col-lg-8">
                <div class="list-group">
                    <a class="list-group-item">F.I.R. Title: <font style="float:right;"> @Html.DisplayFor(model => model.fir_title) <i class="zmdi zmdi-shield-check" style="color:darkblue;" title="Verified Account"></i></font>  </a>
                    <a class="list-group-item">Reporter Name: <font style="float:right;">@Html.DisplayFor(model => model.reporter_name)</font></a>
                    <a class="list-group-item">Reporter Mobile:  <font style="float:right;">@Html.DisplayFor(model => model.reporter_mobile)</font></a>
                    <a class="list-group-item">Reporter Email: <font style="float:right;">@Html.DisplayFor(model => model.reporter_email)</font></a>
                    <a class="list-group-item">Report For: <font style="float:right;"> @Html.DisplayFor(model => model.report_for)</font></a>
                    <a class="list-group-item">Report Summary: <font style="float:right;">@Html.DisplayFor(model => model.report_summary)</font></a>
                    <a class="list-group-item">Report City: <font style="float:right;">@Html.DisplayFor(model => model.report_city)</font></a>
                    <a class="list-group-item">Report State: <font style="float:right;"> @Html.DisplayFor(model => model.report_state)</font></a>
                    <a class="list-group-item">Report Progress: <font style="float:right;"> @Html.DisplayFor(model => model.report_processing)</font></a>
                    <a class="list-group-item">Report Address: <font style="float:right;"> @Html.DisplayFor(model => model.report_address)</font></a>





                    <br />
                    <hr />
                    <br />
                     
                    <font style="float:right;"> @Html.ActionLink("Back to List", "Index")</font>


                    @using (Html.BeginForm("FIRPolice", "Manager", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.TextBoxFor(model => model.fir_id, new { @class = "form-control w3-padding", @placeholder = "FIR ID", required = "" })
                        @Html.ValidationMessageFor(model => model.fir_id, "", new { @class = "error" })
                        <br/>
                        @Html.TextBoxFor(model => model.fir_title, new { @class = "form-control w3-padding", @placeholder = "title", required = "" })
                        @Html.ValidationMessageFor(model => model.fir_title, "", new { @class = "error" })
                        <br/>
                        @Html.DropDownListFor(model => model.police_id, ViewBag.PoliceList as SelectList, "--POLICE ID--", new { @class = "form-control w3-padding", required = "" })
                        @Html.ValidationMessageFor(model => model.police_id, "", new { @class = "error" })
                        <br />
                        @Html.TextBoxFor(model => model.reporter_email, new { @class = "form-control w3-padding", @placeholder = "email", required = "", type = "email" })
                        @Html.ValidationMessageFor(model => model.reporter_email, "", new { @class = "error" })
                        <br />
                        @Html.TextBoxFor(model => model.reporter_mobile, new { @class = "form-control w3-padding", @placeholder = "Mobile", required = "" })
                        @Html.ValidationMessageFor(model => model.reporter_mobile, "", new { @class = "error" })

                        <br />
                        <input type="submit" value="Apply Service" class="btn btn-success w3-input" />
                    }




                </div>






            </div>
            <div class="col-lg-4"><img src="~/uploads/@Html.DisplayFor(model => model.report_image)" class="img-responsive w3-card-4 " /></div>

        </div>


    </div>

    <br />
    <hr />
    <br />









    <script>
        var SendEmail = function () {
            $.ajax({
                type: "POST",
                url: "/Home/SendMail",
                success: function (data) {
                    alert("Success");
                }
            })
        }

    </script>


</body>
</html> 